{% extends "FELAdminBundle:Default:layout.html.twig" %}

{% block body -%}
    <div class="jumbotron jumbotron-trianglify">
        <div class="container"><h1>Modification des news</h1></div>
    </div>
    <section class="container">
        <div class="page-header">
            <h2>Article list</h2>
        </div>

        <table class="table table-striped table-hover records_list">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Title</th>
                    <th>Content</th>
                    <th>Date</th>
                    <th>Author</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for entity in entities %}
                <tr>
                    <td><a href="{{ path('fel_admin_news_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                    <td>{{ entity.title }}</td>
                    <td>{{ entity.content }}</td>
                    <td>{% if entity.date %}{{ entity.date|date('Y-m-d H:i:s') }}{% endif %}</td>
                    <td>{{ entity.author }}</td>
                    <td>
                    <ul>
                        <li>
                            <a href="{{ path('fel_admin_news_show', { 'id': entity.id }) }}"><span class="fa fa-eye"></span></a>
                        </li>
                        <li>
                            <a href="{{ path('fel_admin_news_edit', { 'id': entity.id }) }}"><span class="fa fa-pencil"></span></a>
                        </li>
                        <li>
                            <a href="{{ path('fel_admin_news_confirm', { 'id': entity.id }) }}"><span class="fa fa-times"></span></a>
                        </li>
                    </ul>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

            <ul>
            <li>
                <a href="{{ path('fel_admin_news_new') }}">
                    Create a new entry
                </a>
            </li>
        </ul>
    </section>
{% endblock %}
