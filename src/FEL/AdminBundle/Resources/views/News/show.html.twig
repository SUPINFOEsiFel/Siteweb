{% extends "FELAdminBundle:Default:layout.html.twig" %}

{% block title %}Show Article - News Management{% endblock %}

{% block appendStylesheets %}
    {% stylesheets '@FELAdminBundle/Resources/public/css/news.css' %}
    <link rel="stylesheet" href="{{ asset_url }}" type="text/css" />
    {% endstylesheets %}
{% endblock %}

{% block body -%}
    <div class="jumbotron jumbotron-trianglify">
        <div class="container"><h1>Modification des news</h1></div>
    </div>
    <section class="container">
        <div class="page-header">
            <h2>Article</h2>
        </div>

        <table class="table record_properties">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ entity.id }}</td>
                </tr>
                <tr>
                    <th>Title</th>
                    <td>{{ entity.title }}</td>
                </tr>
                <tr>
                    <th>Content</th>
                    <td>{{ entity.content }}</td>
                </tr>
                <tr>
                    <th>Date</th>
                    <td>{{ entity.date|date('Y-m-d H:i:s') }}</td>
                </tr>
                <tr>
                    <th>Author</th>
                    <td>{{ entity.author }}</td>
                </tr>
            </tbody>
        </table>

            <ul class="record_actions">
            <li>
                <a href="{{ path('fel_admin_news_edit', { 'id': entity.id }) }}" class="btn btn-default">
                    <span class="fa fa-pencil"></span> Edit
                </a>
            </li>
            <li>
                <a href="{{ path('fel_admin_news_confirm', { 'id': entity.id }) }}" class="btn btn-danger">
                    <span class="fa fa-times"></span> Delete
                </a>
            </li>
        </ul>
    </section>
{% endblock %}
