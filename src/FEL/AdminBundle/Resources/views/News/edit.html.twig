{% extends "FELAdminBundle:Default:layout.html.twig" %}

{% form_theme edit_form 'bootstrap_3_horizontal_layout.html.twig' %}

{% block title %}Article Edit - News Management{% endblock %}

{% block appendJavascripts %}
    <script src="{{ asset('lib/tinymce/tinymce.min.js') }}" rel="script" type="application/javascript"></script>
    {% javascripts '@FELAdminBundle/Resources/public/js/tinymce.js' %}
    <script src="{{ asset_url }}" rel="script" type="application/javascript"></script>
    {% endjavascripts %}
{% endblock %}

{% block appendStylesheets %}
    {% stylesheets '@FELAdminBundle/Resources/public/css/inline-record-actions.css' %}
    <link rel="stylesheet" href="{{ asset_url }}" type="text/css"/>
    {% endstylesheets %}
{% endblock %}

{% block body -%}
    <div class="jumbotron jumbotron-trianglify">
        <div class="container"><h1>Modification des news</h1></div>
    </div>
    <section class="container">

        <ol class="breadcrumb">
            <li><a href="{{ path('fel_admin_homepage') }}">Admin</a></li>
            <li><a href="{{ path('fel_admin_news_homepage') }}">Articles</a></li>
            <li><a href="{{ path('fel_admin_news_show', {'id': entity.id}) }}">#{{ entity.id }}</a></li>
            <li class="active">Edit</li>
        </ol>

        <div class="page-header">
            <h2>Article edit</h2>
        </div>

        {{ form(edit_form) }}

        <ul class="record_actions">
            <li>
                <a href="{{ path('fel_admin_news_homepage') }}" class="btn btn-default" role="button">
                    Annuler
                </a>
            </li>
            <li>
                <a href="{{ path('fel_admin_news_confirm', { 'id': entity.id }) }}" class="btn btn-danger"
                   role="button">
                    Supprimer
                </a>
            </li>
        </ul>
    </section>
{% endblock %}
