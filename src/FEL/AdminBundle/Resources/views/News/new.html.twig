{% extends "FELAdminBundle:Default:layout.html.twig" %}

{% block title %}New Article - News Management{% endblock %}

{% block appendStylesheets %}
    {% stylesheets '@FELAdminBundle/Resources/public/css/news.css' %}
    <link rel="stylesheet" href="{{ asset_url }}" type="text/css"/>
    {% endstylesheets %}
{% endblock %}

{% block body -%}
    <div class="jumbotron jumbotron-trianglify">
        <div class="container"><h1>Modification des news</h1></div>
    </div>
    <section class="container">

        <ol class="breadcrumb">
            <li><a href="{{ path('fel_admin_homepage') }}">Admin</a></li>
            <li><a href="{{ path('fel_admin_news_homepage') }}">Articles</a></li>
            <li class="active">New</li>
        </ol>

        <div class="page-header">
            <h2>Article creation</h2>
        </div>

        {{ form(form) }}

        <ul class="record_actions">
            <li>
                <a href="{{ path('fel_admin_news_homepage') }}">
                    Back to the list
                </a>
            </li>
        </ul>
    </section>
{% endblock %}
